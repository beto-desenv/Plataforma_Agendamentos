{
	"info": {
		"_postman_id": "plataforma-agendamentos-api",
		"name": "Plataforma de Agendamentos API",
		"description": "Collection para testar todos os endpoints da API de agendamentos com suporte a múltiplos tipos de usuário",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://localhost:5001/api",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Autenticação",
			"item": [
				{
					"name": "Cadastrar Cliente",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Maria Santos\",\n  \"email\": \"maria@cliente.com\",\n  \"password\": \"minhasenha123\",\n  \"userTypes\": [\"cliente\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Cadastrar Prestador",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@prestador.com\",\n  \"password\": \"minhasenha123\",\n  \"userTypes\": [\"prestador\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Cadastrar Cliente E Prestador",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Ana Completa\",\n  \"email\": \"ana@completa.com\",\n  \"password\": \"minhasenha123\",\n  \"userTypes\": [\"cliente\", \"prestador\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Adicionar Role Cliente (se já é prestador)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@prestador.com\",\n  \"password\": \"minhasenha123\",\n  \"userTypes\": [\"cliente\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('jwt_token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"joao@prestador.com\",\n  \"password\": \"minhasenha123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Adicionar Role Avulso",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"cliente\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/add-role",
							"host": ["{{base_url}}"],
							"path": ["auth", "add-role"]
						}
					}
				},
				{
					"name": "Buscar Usuário Atual",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/profile",
							"host": ["{{base_url}}"],
							"path": ["auth", "profile"]
						}
					}
				}
			]
		},
		{
			"name": "Perfil",
			"item": [
				{
					"name": "Buscar Perfil",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/profile",
							"host": ["{{base_url}}"],
							"path": ["profile"]
						}
					}
				},
				{
					"name": "Atualizar Perfil (Prestador)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"slug\": \"joaocarwash\",\n  \"displayName\": \"João Car Wash\",\n  \"logoUrl\": \"https://exemplo.com/logo.jpg\",\n  \"coverImageUrl\": \"https://exemplo.com/capa.jpg\",\n  \"primaryColor\": \"#1e90ff\",\n  \"bio\": \"Lavagem ecológica, rápida e com atenção aos detalhes.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/profile",
							"host": ["{{base_url}}"],
							"path": ["profile"]
						}
					}
				}
			]
		},
		{
			"name": "Serviços",
			"item": [
				{
					"name": "Listar Serviços",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/services",
							"host": ["{{base_url}}"],
							"path": ["services"]
						}
					}
				},
				{
					"name": "Criar Serviço",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Lavagem Completa\",\n  \"description\": \"Lavagem externa e interna com cera\",\n  \"price\": 45.00,\n  \"durationMinutes\": 60\n}"
						},
						"url": {
							"raw": "{{base_url}}/services",
							"host": ["{{base_url}}"],
							"path": ["services"]
						}
					}
				}
			]
		},
		{
			"name": "Público",
			"item": [
				{
					"name": "Buscar Prestador por Slug",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/prestador/joaocarwash",
							"host": ["{{base_url}}"],
							"path": ["prestador", "joaocarwash"]
						}
					}
				}
			]
		}
	]
}